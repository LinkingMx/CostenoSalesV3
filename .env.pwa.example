# PWA-Specific Session Configuration
# Add these settings to your .env file for optimal PWA session persistence

# Extended session lifetime for PWA (30 days in minutes)
SESSION_LIFETIME=43200

# Cookie settings for PWA compatibility
SESSION_SAME_SITE=none
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=false

# Session domain (set to your actual domain)
# SESSION_DOMAIN=.yourdomain.com

# Use database driver for better persistence
SESSION_DRIVER=database

# Enable session encryption for security
SESSION_ENCRYPT=true